{
  "name": "docker-nunotarissen",
  "description": "Boilerplate for developing Craft CMS in a docker container",
  "version": "1.1.1",
  "private": true,
  "scripts": {
    "build": "npm-run-all --serial clean build:**",
    "build:js": "rollup --config rollup.config.production.js",
    "build:scss": "node-sass --source-map true --output-style compressed --output web/dist templates/main.scss",
    "build:postcss": "postcss --use autoprefixer --autoprefixer.browsers '> 1%, last 2 versions' --use cssnano --output web/dist/bundle.css web/dist/main.css",
    "build:webfonts": "cpx templates/webfonts/**/* web/dist/webfonts",
    "build:webfontskit": "cpx templates/MyFontsWebfontsKit.css web/dist",
    "devbuild:js": "rollup --config rollup.config.development.js",
    "clean": "rm -rf web/dist",
    "serve": "browser-sync start --config bs-config.js",
    "prestart": "npm-run-all --parallel devbuild:js build:scss",
    "start": "npm-run-all --parallel watch serve",
    "watch": "npm-run-all --parallel watch:**",
    "watch:js": "npm run devbuild:js -- --watch",
    "watch:scss": "npm run build:scss -- --watch",
    "watch:postcss": "npm run build:postcss -- --watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "browser-sync": "^2.18.13",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "ejs": "^2.5.7",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.0",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "uglify-es": "^3.1.0"
  },
  "dependencies": {
    "mappy-breakpoints": "^0.2.3",
    "npm-check-updates": "^2.12.1",
    "objectFitPolyfill": "2.0.5",
    "promise-polyfill": "^6.0.2"
  }
}
